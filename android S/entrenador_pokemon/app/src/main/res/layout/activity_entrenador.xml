<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_entrenador">

    <Button
        android:id="@+id/btn_crear_entrenador"
        android:layout_width="102dp"
        android:layout_height="46dp"
        android:layout_marginTop="76dp"
        android:text="Crear"
        app:layout_constraintEnd_toEndOf="@+id/tv_entrenador"
        app:layout_constraintStart_toStartOf="@+id/tv_entrenador"
        app:layout_constraintTop_toBottomOf="@+id/tv_entrenador" />

    <Button
        android:id="@+id/btn_modificar_entrenador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Modificar"
        app:layout_constraintEnd_toEndOf="@+id/btn_crear_entrenador"
        app:layout_constraintTop_toBottomOf="@+id/btn_crear_entrenador" />

    <TextView
        android:id="@+id/tv_entrenador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="Entrenador"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_buscar_entrenador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Buscar"
        app:layout_constraintEnd_toEndOf="@+id/btn_modificar_entrenador"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_modificar_entrenador"
        app:layout_constraintTop_toBottomOf="@+id/btn_modificar_entrenador" />

    <Button
        android:id="@+id/btn_eliminar_entrenador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Eliminar"
        app:layout_constraintEnd_toEndOf="@+id/btn_buscar_entrenador"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_buscar_entrenador"
        app:layout_constraintTop_toBottomOf="@+id/btn_buscar_entrenador" />
</androidx.constraintlayout.widget.ConstraintLayout>