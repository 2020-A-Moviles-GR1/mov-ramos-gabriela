<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_crear_entrenador">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ingrese nombre"
        app:layout_constraintStart_toStartOf="@+id/tv_id_entrenador"
        tools:layout_editor_absoluteY="184dp" />

    <EditText
        android:id="@+id/et_nombre_entrenador"
        android:layout_width="157dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nombre"
        app:layout_constraintEnd_toEndOf="@+id/id_entrenador"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView"
        tools:layout_editor_absoluteY="171dp" />

    <TextView
        android:id="@+id/tv_id_entrenador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="ingrese id"
        app:layout_constraintEnd_toStartOf="@+id/id_entrenador"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_crear_entrenador"
        app:layout_constraintTop_toBottomOf="@+id/tv_crear_entrenador" />

    <EditText
        android:id="@+id/id_entrenador"
        android:layout_width="144dp"
        android:layout_height="31dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/tv_crear_entrenador"
        app:layout_constraintTop_toBottomOf="@+id/tv_crear_entrenador" />

    <TextView
        android:id="@+id/tv_activo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esta activo el entrenador?"
        app:layout_constraintStart_toStartOf="@+id/textView"
        tools:layout_editor_absoluteY="278dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="distancia caminada"
        app:layout_constraintStart_toStartOf="@+id/tv_activo"
        tools:layout_editor_absoluteY="369dp" />

    <EditText
        android:id="@+id/et_distancia_entrenador"
        android:layout_width="86dp"
        android:layout_height="37dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/radioGroup2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        tools:layout_editor_absoluteY="369dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nivel"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        tools:layout_editor_absoluteY="426dp" />

    <EditText
        android:id="@+id/et_nivel_entrenador"
        android:layout_width="99dp"
        android:layout_height="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nivel"
        app:layout_constraintEnd_toEndOf="@+id/et_distancia_entrenador"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        tools:layout_editor_absoluteY="426dp" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/et_nombre_entrenador"
        app:layout_constraintStart_toEndOf="@+id/tv_activo"
        tools:layout_editor_absoluteY="268dp">

        <RadioButton
            android:id="@+id/btn_si_activo_entrenador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Si " />

        <RadioButton
            android:id="@+id/btn_no_activo_entrenador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No " />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_crear_entrenador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Crear Entrenador"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>