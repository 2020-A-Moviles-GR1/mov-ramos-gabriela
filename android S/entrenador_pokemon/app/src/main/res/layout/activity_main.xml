<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_pregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Con que quieres trabajar?"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26" />

    <Button
        android:id="@+id/btn_Entrenador"
        android:layout_width="188dp"
        android:layout_height="45dp"
        android:layout_marginTop="84dp"
        android:text="Entrenador"
        app:layout_constraintEnd_toEndOf="@+id/tv_pregunta"
        app:layout_constraintHorizontal_bias="0.415"
        app:layout_constraintStart_toStartOf="@+id/tv_pregunta"
        app:layout_constraintTop_toBottomOf="@+id/tv_pregunta" />

    <Button
        android:id="@+id/btn_pokemon"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginTop="52dp"
        android:text="Pokemon"
        app:layout_constraintEnd_toEndOf="@+id/btn_Entrenador"
        app:layout_constraintTop_toBottomOf="@+id/btn_Entrenador" />

</androidx.constraintlayout.widget.ConstraintLayout>