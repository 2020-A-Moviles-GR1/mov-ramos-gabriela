        <activity android:name="com.example.entrenador_pokemon.activity_entrenador" />
        <activity android:name="com.example.entrenador_pokemon.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>