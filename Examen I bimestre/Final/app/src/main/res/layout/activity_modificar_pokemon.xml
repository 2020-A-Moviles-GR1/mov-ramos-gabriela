<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModificarPokemonActivity">

    <EditText
        android:id="@+id/et_nivel_pokemon_ed"
        android:layout_width="63dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="#FAFAFA"
        android:ems="10"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:text="Nivel"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="#3F51B5"
        android:textColorHint="#FBFBFB"
        android:textColorLink="#3F51B5"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/etv_tipo_poke_mod"
        app:layout_constraintStart_toEndOf="@+id/etv_tipo_poke_mod"
        app:layout_constraintTop_toTopOf="@+id/etv_tipo_poke_mod"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/et_activo_poke_edi"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:backgroundTint="#FDFDFD"
        android:ems="10"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:text="Activo"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorHint="#FFFFFF"
        android:textColorLink="@color/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/etv_entrenador_due"
        app:layout_constraintStart_toEndOf="@+id/etv_entrenador_due"
        app:layout_constraintTop_toTopOf="@+id/etv_entrenador_due"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_modificar_pokemon"
        android:layout_width="161dp"
        android:layout_height="44dp"
        android:layout_marginEnd="28dp"
        android:background="?android:attr/colorPressedHighlight"
        android:backgroundTint="@android:color/holo_green_light"
        android:lineSpacingExtra="30sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Modificar Pokemon"
        android:textColor="#F8F8F8"
        app:layout_constraintBottom_toBottomOf="@+id/btn_mapa"
        app:layout_constraintEnd_toStartOf="@+id/btn_mapa"
        app:layout_constraintTop_toTopOf="@+id/btn_mapa"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_crear_pokemon"
        android:layout_width="161dp"
        android:layout_height="44dp"
        android:layout_marginStart="28dp"
        android:background="?android:attr/colorPressedHighlight"
        android:backgroundTint="@android:color/holo_orange_light"
        android:lineSpacingExtra="30sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Crear Pokemon"
        android:textColor="#F8F8F8"
        app:layout_constraintBottom_toBottomOf="@+id/btn_eliminar_pokemon"
        app:layout_constraintStart_toEndOf="@+id/btn_eliminar_pokemon"
        app:layout_constraintTop_toTopOf="@+id/btn_eliminar_pokemon"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_mapa"
        android:layout_width="161dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:background="?android:attr/colorPressedHighlight"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:lineSpacingExtra="30sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Mapa"
        android:textColor="#F8F8F8"
        app:layout_constraintEnd_toEndOf="@+id/etv_longitud"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etv_longitud"
        app:layout_constraintTop_toBottomOf="@+id/etv_longitud" />

    <Button
        android:id="@+id/btn_eliminar_pokemon"
        android:layout_width="162dp"
        android:layout_height="42dp"
        android:layout_marginTop="60dp"
        android:background="#3F51B5"
        android:backgroundTint="@android:color/holo_red_light"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Eliminar Pokemon"
        android:textColor="#FAF8F8"
        app:layout_constraintEnd_toEndOf="@+id/btn_modificar_pokemon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_modificar_pokemon"
        app:layout_constraintTop_toTopOf="@+id/btn_modificar_pokemon" />

    <TextView
        android:id="@+id/tv_modifcar_pokemon"
        android:layout_width="377dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="#000000"
        android:backgroundTint="@android:color/background_light"
        android:text="Pokemon"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etv_nombre_poke_mod"
        android:layout_width="103dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FDFDFD"
        android:ems="0"
        android:focusableInTouchMode="true"
        android:hint="Nombre Cancion"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:text="Nombre "
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="#3F51B5"
        android:textColorHint="#FDFBFB"
        android:textColorLink="#3F51B5"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/etv_id_pokemon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etv_id_pokemon"
        app:layout_constraintTop_toBottomOf="@+id/etv_id_pokemon" />

    <EditText
        android:id="@+id/etv_entrenador_due"
        android:layout_width="136dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#FDFDFD"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:hint="Entrenador"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:text="Entrenador"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="#3F51B5"
        android:textColorHint="#FDFBFB"
        android:textColorLink="#3F51B5"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/etv_nombre_poke_mod"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/etv_nombre_poke_mod"
        app:layout_constraintTop_toBottomOf="@+id/etv_nombre_poke_mod" />

    <EditText
        android:id="@+id/etv_url_pokemon"
        android:layout_width="310dp"
        android:layout_height="42dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#FDFDFD"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:text="url"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="#3F51B5"
        android:textColorHint="#FDFBFB"
        android:textColorLink="#3F51B5"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/et_activo_poke_edi"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/et_activo_poke_edi"
        app:layout_constraintTop_toBottomOf="@+id/et_activo_poke_edi" />

    <EditText
        android:id="@+id/etv_imagen_pokemon"
        android:layout_width="299dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FDFDFD"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:text="imagen"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="#3F51B5"
        android:textColorHint="#FDFBFB"
        android:textColorLink="#3F51B5"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/etv_url_pokemon"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="@+id/etv_url_pokemon"
        app:layout_constraintTop_toBottomOf="@+id/etv_url_pokemon" />

    <EditText
        android:id="@+id/etv_latitud"
        android:layout_width="92dp"
        android:layout_height="39dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#FDFDFD"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:hint="Entrenador"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:text="latitud"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="#3F51B5"
        android:textColorHint="#FDFBFB"
        android:textColorLink="#3F51B5"
        app:layout_constraintBottom_toBottomOf="@+id/etv_longitud"
        app:layout_constraintEnd_toStartOf="@+id/etv_longitud"
        app:layout_constraintTop_toTopOf="@+id/etv_longitud"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/etv_longitud"
        android:layout_width="92dp"
        android:layout_height="39dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#FDFDFD"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:hint="Entrenador"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:text="longuitud"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="#3F51B5"
        android:textColorHint="#FDFBFB"
        android:textColorLink="#3F51B5"
        app:layout_constraintEnd_toEndOf="@+id/etv_imagen_pokemon"
        app:layout_constraintHorizontal_bias="0.835"
        app:layout_constraintStart_toStartOf="@+id/etv_imagen_pokemon"
        app:layout_constraintTop_toBottomOf="@+id/etv_imagen_pokemon" />

    <EditText
        android:id="@+id/etv_id_pokemon"
        android:layout_width="175dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FDFDFD"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:hint="Nombre Cancion"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:text="id"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="#3F51B5"
        android:textColorHint="#FDFBFB"
        android:textColorLink="#3F51B5"
        app:layout_constraintEnd_toEndOf="@+id/tv_modifcar_pokemon"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="@+id/tv_modifcar_pokemon"
        app:layout_constraintTop_toBottomOf="@+id/tv_modifcar_pokemon" />

    <EditText
        android:id="@+id/etv_tipo_poke_mod"
        android:layout_width="78dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:backgroundTint="#FDFDFD"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:text="Tipo"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="#3F51B5"
        android:textColorHint="#FDFBFB"
        android:textColorLink="#3F51B5"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/etv_nombre_poke_mod"
        app:layout_constraintStart_toEndOf="@+id/etv_nombre_poke_mod"
        app:layout_constraintTop_toTopOf="@+id/etv_nombre_poke_mod" />
</androidx.constraintlayout.widget.ConstraintLayout>