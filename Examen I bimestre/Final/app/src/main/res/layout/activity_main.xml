<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6A6A6A"
    android:backgroundTint="@color/colorAccent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/btn_entrenador"
        android:layout_width="272dp"
        android:layout_height="220dp"
        android:layout_marginTop="60dp"
        android:scaleType="fitStart"
        android:src="@drawable/epok2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.597"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/epok2" />

    <ImageButton
        android:id="@+id/btn_pokemon"
        android:layout_width="212dp"
        android:layout_height="189dp"
        android:layout_marginTop="48dp"
        android:scaleType="fitStart"
        android:src="@drawable/pokebola"
        app:layout_constraintEnd_toEndOf="@+id/btn_entrenador"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toStartOf="@+id/btn_entrenador"
        app:layout_constraintTop_toBottomOf="@+id/btn_entrenador"
        tools:srcCompat="@drawable/pokebola" />


</androidx.constraintlayout.widget.ConstraintLayout>