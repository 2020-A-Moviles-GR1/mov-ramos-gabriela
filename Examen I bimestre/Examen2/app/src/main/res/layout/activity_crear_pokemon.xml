<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearPokemon">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="POKEMONES"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lv_pokemones"
        android:layout_width="266dp"
        android:layout_height="112dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/etv_nombre_pokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nombre"
        app:layout_constraintEnd_toEndOf="@+id/lv_pokemones"
        app:layout_constraintStart_toStartOf="@+id/lv_pokemones"
        app:layout_constraintTop_toBottomOf="@+id/lv_pokemones" />

    <EditText
        android:id="@+id/etv_tipo_pokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Tipo"
        app:layout_constraintEnd_toEndOf="@+id/etv_nombre_pokemon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etv_nombre_pokemon"
        app:layout_constraintTop_toBottomOf="@+id/etv_nombre_pokemon" />

    <EditText
        android:id="@+id/etv_nivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nivel"
        app:layout_constraintEnd_toEndOf="@+id/etv_tipo_pokemon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etv_tipo_pokemon"
        app:layout_constraintTop_toBottomOf="@+id/etv_tipo_pokemon" />

    <CheckBox
        android:id="@+id/cb_pokemon_activo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Activo"
        app:layout_constraintEnd_toEndOf="@+id/etv_nivel"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/etv_nivel"
        app:layout_constraintTop_toBottomOf="@+id/etv_nivel" />

    <Button
        android:id="@+id/btn_nuevo_pokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="100dp"
        android:text="Crear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn_modificar_pokemon"
        app:layout_constraintTop_toBottomOf="@+id/cb_pokemon_activo" />

    <Button
        android:id="@+id/btn_modificar_pokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="24dp"
        android:text="Modificar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_pokemon_activo" />

    <Button
        android:id="@+id/btn_eliminar_pokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="88dp"
        android:text="Eliminar"
        app:layout_constraintEnd_toEndOf="@+id/btn_nuevo_pokemon"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_modificar_pokemon"
        app:layout_constraintTop_toBottomOf="@+id/btn_nuevo_pokemon" />
</androidx.constraintlayout.widget.ConstraintLayout>